<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/StudentDB</property>
        <property name="hibernate.connection.user">postgres</property>
        <property name="hibernate.connection.password">DatAEngineeR24</property>
        
        <property name="hibernate.hbm2ddl.auto">create</property>
        <!-- means Hibernate will automatically align your database tables with your entity classes â€”
        adding missing structures but keeping existing data safe. value create will create table each time
        & drop table if exists-->
        <property name="hibernate.show_sql">true</property>
        <!-- it will show sql using  Hibernate. default false -->
<!--        <property name="hibernate.format_sql">true</property>-->
        <!-- it will show sql using with format. default false -->
        <property name="hibernate.sql_dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <!--    not compulsory, but recommended. it's giving instruction which dialect of sql to use    -->
    </session-factory>
</hibernate-configuration>